{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017",
      "es2019",
      "dom.iterable", "esnext"
    ],
    "downlevelIteration": true,
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true ,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@components": ["src/components/"],
      "@reducers": ["redux/reducers/"],
      "@selectors": ["src/selectors/"],
      "~/*": ["./*"]
    },
    "incremental": true
  },
  "include": [
    "./src/externals.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
}
